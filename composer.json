{
    "name": "jldojo/sonictest",
    "description": "Library to speed up your testing cycle. Execute only the tests affected by the code changes.",
    "type": "library",
    "authors": [
        {
            "name": "Luis Rovirosa",
            "email": "luisrovirosa@gmail.com"
        },
        {
            "name": "Jordi Anguela",
            "email": "jordi.anguela@gmail.com"
        }
    ],
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "^6.2"
    },
    "autoload": {
        "psr-4": {
            "JlDojo\\SonicTest\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JlDojo\\SonicTest\\Tests\\": "tests",
            "JlDojo\\SonicTest\\Tests\\ProjectToTest\\": "tests/a_project_to_test/src",
            "JlDojo\\SonicTest\\Tests\\ProjectToTest\\Tests\\": "tests/a_project_to_test/tests"
        }
    }
}
